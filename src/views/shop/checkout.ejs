<%- include('../includes/head.ejs') %>
	<link rel="stylesheet" href="/css/forms.css">
	<link rel="stylesheet" href="/css/checkout.css">
	</head>

	<body>
		<%- include('../includes/nav.ejs') %>
			<main class="container">
				<form class="checkout-form" action="/checkout" method="POST">
					<% if(isAdmin) { %>
						<div class="form-control">
							<label for="customerId">On Behalf Of</label>
							<input type="text" name="customerId" id="customerId" placeholder="Customer ID" required>
						</div>
						<% } %>
							<div class="form-control">
								<label for="customerName">Recipient Name</label>
								<input type="text" name="customerName" id="customerName" placeholder="Full Name" required>
							</div>
							<div class="form-control">
								<label for="customerEmail">Recipient Email</label>
								<input type="email" name="customerEmail" id="customerEmail" placeholder="Email Address" required>
							</div>
							<div class="form-control">
								<label for="customerPhone">Recipient Phone</label>
								<input type="number" name="customerPhone" id="customerPhone" placeholder="Phone Number" required>
							</div>
							<div class="form-control">
								<label for="shippingAddress">Shipping Address</label>
								<input type="text" name="shippingAddress" id="shippingAddress" required>
							</div>

							<% for (const [index, cartItem] of cart.cartItems.entries()) { %>
								<input type="hidden" name="orderItems[<%= index %>][productId]" value="<%= cartItem.productId %>">
								<input type="hidden" name="orderItems[<%= index %>][quantity]" value="<%= cartItem.quantity %>">
								<% } %>

									<button class="my-btn" type="submit">Submit</button>
				</form>
			</main>
			<%- include('../includes/end.ejs') %>